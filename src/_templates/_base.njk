<!DOCTYPE html>
<html class="page" lang="{{ page.lang }}">
<head>
	{% include "head_seo.njk" %}
	{% include "head_open-graph.njk" %}
	{% include "head_schema.org.njk" %}
	<script defer src="{{ "/scripts/bundle.js" | filehash }}"></script>
	<link rel="stylesheet" href="{{ "/styles/styles.css" | filehash }}">
	{% include "head_favicons.njk" %}
	<link rel="alternate" type="application/rss+xml" title="{{ "site description" | translate | safe }}" href="{{ site.url }}{{ "feedUrl" | translate }}">
</head>

<body class="base layout" data-theme="light">
	{% include "header.njk" %}
	<div class="layout__body wrapper">
		<main class="layout__main">
			{% if layout !== "article.njk" %}
				<h1>{{ title }}</h1>
			{% endif %}
			{{ content | safe }}
		</main>
	</div>
	{% include "footer.njk" %}

	{% if env === "production" %}
		<script defer="defer" data-domain="a11y-blog.dev" src="https://analytics.dudin.design/js/script.js"></script>
	{% endif %}
</body>
</html>
