---
layout: _base.njk
---

<header class="article-header">
	<h1>{{ title }}</h1>

	<ul class="topics topics--in-article">
		{% for tag in keyTheme %}
			<li class="card__topic-item">{{ tag }}</li>
		{% endfor %}
	</ul>

	<div class="article-header__dates">
		<div class="article-header__dates-item">
			{% include "../assets/ico-published.svg" %}
			<time datetime="{{ date | dateFormat("ISO") }}">{{ date | dateFormat("readable") }}</time>
		</div>
		{% if updated %}
			<div class="article-header__dates-item">
				{% include "../assets/ico-updated.svg" %}
				{{ "updated" | translate }}
				<time datetime="{{ updated | dateFormat("ISO") }}">{{ updated | dateFormat("readable") }}</time>
			</div>
		{% endif %}
	</div>
</header>

<div class="article">
	{{ content | safe }}
</div>

<section class="cards__list" aria-labelledby="section-label">
	<h2 class="cards_heading" id="section-label">
		{{ "other articles" | translate }}
	</h2>
	{% include "article-navigation.njk" %}
</section>
