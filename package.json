{
  "name": "a11y-blog-dev",
  "description": "",
  "author": "Tatiana Fokina",
  "license": "ISC",
  "scripts": {
    "watch": "npm-run-all --parallel _watch:*",
    "build": "cross-env-shell ELEVENTY_ENV=production \"npm-run-all _build:* && eleventy && pnpm _build:html\"",
    "deploy": "type nul > ./dist/.nojekyll && gh-pages --dist dist --dotfiles true",
    "build+deploy": "npm-run-all build deploy",
    "_watch:11ty": "eleventy --serve",
    "_watch:sass": "sass src/styles/styles.scss:dist/styles/styles.css --watch",
    "_watch:js": "rollup -c -w",
    "_build:sass": "sass --no-source-map src/styles/styles.scss:dist/styles/styles.css",
    "_build:lightningcss": "npx lightningcss-cli --minify --bundle dist/styles/styles.css -d dist/styles",
    "_build:js": "rollup -c",
    "_build:html": "html-minifier --input-dir dist --output-dir dist --file-ext html --collapse-whitespace --remove-comments --minify-css true --minify-js true",
    "_remove-dist": "rimraf dist",
    "fix:ru-preps": "node nbsp-fix.js"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "cross-env": "^7.0.3",
    "fs": "0.0.1-security",
    "gh-pages": "^6.3.0",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "lightningcss-cli": "^1.30.1",
    "markdown-it": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.4",
    "path": "^0.12.7",
    "pretty-data": "^0.40.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.45.0",
    "sass": "^1.89.2"
  }
}
